generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tutor {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  subjects   String
  bio        String
  education  String? // âœ… TEMP: nullable
  hourlyRate Int      @default(50)
  createdAt  DateTime @default(now())

  reviews  Review[]
  bookings Booking[]
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String
  student   String
  createdAt DateTime @default(now())

  tutorId Int
  tutor   Tutor @relation(fields: [tutorId], references: [id])
}

model Booking {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  studentName    String
  studentEmail   String
  subject        String
  preferredTimes String
  message        String?
  status         String  @default("pending")

  acceptToken  String @unique
  declineToken String @unique

  tutorId Int
  tutor   Tutor @relation(fields: [tutorId], references: [id])
}
